			"{",
			"",
			"\tpublic \\$${2:id};",
			"\tpublic \\$${3:title};",
			"\tpublic \\$${4:content};",
			"\tpublic \\$${5:date_add};",
			"\tpublic \\$${6:rate};",
			"\tpublic \\$${7:more_info};",
			"\tpublic \\$${8:active};",
			"",
			"\tpublic static \\$definition = array(",
			"\t\t'table'     => 'nom_de_la_table_sans_prefix',",
			"\t\t'primary'   => 'ClÃ© primaire',",
			"\t\t'multilang' => false,",

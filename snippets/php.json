	"p:psquery": {
		"prefix": "p:psquery",
		"body": [
			"\\$sql = new DbQuery();",
			"\\$sql->select('*');",
			"\\$sql->from('cms', 'c');",
			"\\$sql->innerJoin('cms_lang', 'l', 'c.id_cms = l.id_cms AND l.id_lang = '.(int)\\$id_lang);",
			"\\$sql->where('c.active = 1');",
			"\\$sql->orderBy('position');",
			"return Db::getInstance()->executeS(\\$sql);"
		],
		"description": "Prestashop DB Query"
	},

